#!/bin/bash

# This script fetches data for Pikachu from the PokÃ©mon API.
# It saves the successful response to data.json and logs errors to errors.txt.

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request.
# -s: Silent mode
# -f: Fail silently on server errors (returns non-zero exit code)
# -o: Output file
if curl -fsS -o "$OUTPUT_FILE" "$API_URL"; then
    echo "Pikachu data successfully saved to $OUTPUT_FILE"
else
    # If curl fails, log an error message.
    echo "Error: Failed to fetch data for Pikachu. Check $ERROR_FILE for details." >&2
    echo "Timestamp: $(date) - Failed to retrieve data from $API_URL" > "$ERROR_FILE"
    exit 1
fi